{
  "name": "optimistic-ui",
  "version": "0.1.6",
  "private": true,
  "description": "A tiny, type-safe toolkit that eliminates boilerplate for optimistic UI updates using TanStack Query",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' build",
    "dev": "pnpm -r --parallel --filter='./packages/*' dev",
    "test": "pnpm -r --filter='./packages/*' test",
    "lint": "pnpm -r --filter='./packages/*' lint",
    "clean": "pnpm -r --filter='./packages/*' clean",
    "build:examples": "pnpm -r --filter='./examples/*' build",
    "dev:examples": "pnpm -r --parallel --filter='./examples/*' dev",
    "publish:packages": "pnpm -r publish --filter='./packages/*'"
  },
  "keywords": [
    "optimistic-ui",
    "tanstack-query",
    "react-query",
    "optimistic-updates",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

